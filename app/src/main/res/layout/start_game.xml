<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".start_game">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/stopwatch"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tvTimer"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="30 s "
                android:textSize="30dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star" />

            <TextView

                android:id="@+id/tvPoints"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0 / 0 "
                android:textSize="25dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvOperat"
                android:text="1 + 2 = "
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="\ ?"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn0"
                android:onClick="chooseAnsewer"
                android:layout_weight="1"
                android:background="#00FF57"
                android:textSize="40dp"
                android:text="7"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <Button
                android:id="@+id/btn1"
                android:onClick="chooseAnsewer"
                android:layout_weight="1"
                android:background="#276F42"
                android:textSize="40dp"
                android:text="7"
                android:layout_width="90dp"
                android:layout_height="100dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn2"
                android:onClick="chooseAnsewer"
                android:layout_weight="1"
                android:background="#F03D76"
                android:textSize="40dp"
                android:text="7"
                android:layout_width="90dp"
                android:layout_height="100dp"/>
            <Button
                android:id="@+id/btn3"
                android:onClick="chooseAnsewer"
                android:layout_weight="1"
                android:background="#1549E6"
                android:textSize="40dp"
                android:text="7"
                android:layout_width="90dp"
                android:layout_height="100dp"/>


        </LinearLayout>

        <ImageView
            android:layout_marginTop="20dp"
            android:src="@drawable/lead_speaker"
            android:layout_width="70dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/tvResult"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</LinearLayout>